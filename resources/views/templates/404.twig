{% extends "/layouts/minimal.twig" %}

{% set xdata = 'home' %}

{% block title 'Not found'|title %}

{% block template %}
<section
  class="grid grid-cols-1 gap-6 px-16 py-12 border rounded-xl border-line-dimmed">

  <div>
    <h2 class="text-lg font-bold">Page not found</h2>
    <p class="mt-2">The page you are looking for does not exist.</p>
  </div>

  <div>
    <a href="{{ auth_user is defined ? 'app' : '/' }}"
      class="button button-outline">
      <i class="ti ti-arrow-left"></i>

      {{ auth_user is defined ? 'Go back to app' : 'Go back to home page' }}
    </a>
  </div>
</section>

{% endblock %}