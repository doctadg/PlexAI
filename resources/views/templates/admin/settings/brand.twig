{% extends "/layouts/admin.twig" %}
{% set active_menu = 'settings' %}

{% block submenu %}
{% include "/sections/submenu/settings.twig" with {active: 'brand'} %}
{% endblock %}

{% set xdata = 'settings' %}
{% block title 'Brand settings'|title %}

{% block template %}
<form class="flex flex-col max-w-3xl gap-8" @submit.prevent="submit"
  x-ref="form">

  <div>
    <h1 class="text-xl font-bold">
      Brand settings
    </h1>
  </div>

  <div class="flex flex-col gap-2">
    <section
      class="grid grid-cols-1 gap-6 px-16 py-12 border rounded-xl border-line-dimmed">

      <h2 class="text-lg font-bold">Favicon</h2>

      <div>
        <div class="flex items-center justify-between">
          <label for="brand.favicon" class="text-sm font-semibold">
            Favicon
          </label>

          {% if option.brand.favicon is defined and option.brand.favicon is not empty %}
          <div class="mt-2">
            <a href="{{ option.brand.favicon }}" target="_blank"
              class="flex items-center gap-1 text-xs text-content-dimmed hover:text-content hover:no-underline">
              View current

              <i class="ti ti-external-link"></i>
            </a>
          </div>
          {% endif %}
        </div>

        <div class="relative p-6 mt-2" x-data="{file:null}">
          <svg
            class="absolute top-0 left-0 w-full h-full rounded-lg text-line-dimmed group-hover:text-line group-data-[selected]:hidden"
            width="100%" height="100%" fill="none"
            xmlns="http://www.w3.org/2000/svg">
            <rect cx="56" width="100%" height="100%" stroke="currentColor"
              stroke-dasharray="4 4" rx="8" ry="8" />
          </svg>

          <div class="relative z-10 flex items-start justify-between gap-6">
            <template x-if="!file">
              <div>
                <div class="font-semibold">Upload file</div>
                <div class="mt-1 text-xs text-intermediate-content">
                  png, jpg, jpeg, gif, ico, or svg
                </div>
              </div>
            </template>

            <template x-if="file">
              <div>
                <div class="font-semibold truncate" x-text="file.name"></div>

                <div class="mt-1 text-xs text-intermediate-content"
                  x-text="file.type">
                </div>
              </div>
            </template>

            <button type="button" class="button button-outline"
              @click="$refs.file.click()">Browse files</button>
          </div>

          <input type="file" @change="file = $refs.file.files[0];"
            name="brand[favicon]" id="file" class="hidden" accept="image/*"
            x-ref="file">
        </div>
      </div>
    </section>

