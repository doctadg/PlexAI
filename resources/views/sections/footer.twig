<footer class="mt-16 @container">
  <div class="p-6 pb-10 border-t border-line-dimmed">
    <div
      class="flex flex-col gap-6 @5xl:flex-row @5xl:items-start @5xl:justify-between">
      <div class="@5xl:order-2">
        <ul class="flex text-sm gap-4 @5xl:gap-10 font-semibold list-none">
          {% if option.policies.tos is defined and option.policies.tos is not empty %}
          <li><a href="policies/terms">Terms of services</a></li>
          {% endif %}

          {% if option.policies.privacy is defined and option.policies.privacy is not empty %}
          <li><a href="policies/privacy">Privacy policy</a></li>
          {% endif %}

          {% if option.policies.refund is defined and option.policies.refund is not empty %}
          <li><a href="policies/refund">Refund policy</a></li>
          {% endif %}
        </ul>
      </div>

      <div class="text-sm text-content-dimmed">
        <div>
          <div>
            All rights reserved.
          </div>

          <div class="mt-1">
            Copyright &copy; {{ 'now' | date('Y') }}
            {{ option.site.name ?? '' }}
          </div>
        </div>

        <div class="mt-4 text-xs text-content-dimmed">
          <span class="">Version</span>
          <span is="copyable-element" class="font-mono">{{ version }}</span>
        </div>
      </div>
    </div>
  </div>
</footer>